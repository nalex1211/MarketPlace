@model MarketPlace.ViewModels.RegisterViewModel

<form asp-action="Register" class="form-signin">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert-danger">
            <span>@TempData["Error"]</span>
        </div>
    }

    <h1 class="h3 mb-3 font-weight-normal Center">Register</h1>
    <div class="Center">
        <input style="width:50%" asp-for="Name" class="form-control" placeholder="Name" autofocus>
    </div>
    <span asp-validation-for="Name" class="text-danger Center"></span>

    <div class="mt-2 Center">
        <input style="width:50%" asp-for="LastName" class="form-control" placeholder="Last name" autofocus>
    </div>
    <span asp-validation-for="LastName" class="text-danger Center"></span>

    <div class="mt-2 Center">
        <input style="width:50%" asp-for="Username" class="form-control" placeholder="Username" autofocus>
    </div>
    <span asp-validation-for="Username" class="text-danger Center"></span>

    <div class="mt-2 Center">
        <input style="width:50%" asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Phone number" autofocus>
    </div>
    <span asp-validation-for="PhoneNumber" class="text-danger Center"></span>

    <div class="mt-2 Center">
        <input style="width:50%" asp-for="Email" type="email" class="form-control" placeholder="Email" autofocus>
    </div>
    <span asp-validation-for="Email" class="text-danger Center"></span>

    <div class="mt-2 Center">
        <input style="width:50%" asp-for="Password" id="IdPassword" type="password" class="form-control" placeholder="Password">
    </div>
    <span asp-validation-for="Password" class="text-danger field-validation-error Center"></span>

    <div class="mt-2 Center">
        <input style="width:50%" asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Password">
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger Center" style="white-space: pre-wrap;"></span>

    <div class="checkbox mb-3 Center" style="margin-right:480px">
        <label>
            <input class="form-check-input" type="checkbox" onclick="myFunction()" /> Show password
        </label>
    </div>

    <div class="BtnCenter">
        <button asp-controller="Account" asp-action="Register" class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        <button asp-controller="Home" asp-action="Index" class="btn btn-lg btn-secondary btn-block mt-1" type="submit">Back to home page</button>
    </div>
</form>

<script>
    function myFunction() {
        var x = document.getElementById("IdPassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>