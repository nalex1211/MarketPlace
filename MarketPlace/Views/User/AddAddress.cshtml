@model Addresses

<body>
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
            <h2>Address form</h2>
            <label style="font-size:30px;text-align:center;display:block" class="text-danger">@TempData["NoAddress"]</label>
        </div>
        <form method="post" asp-action="AddAddress">
            <div class="row BtnCenter">
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Billing address</h4>
                    <div class="mb-3">
                        <label asp-for=Country></label>
                        <input asp-for=Country type="text" class="form-control" placeholder="Ukraine" required>
                        <div class="invalid-feedback">
                            Please enter your country.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for=City></label>
                        <input asp-for=City type="text" class="form-control" placeholder="Kyiv">
                    </div>

                    <div class="mb-3">
                        <label asp-for=Street></label>
                        <input asp-for=Street type="text" class="form-control" placeholder="Prospect Peremohy 3">
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for=PostalCode></label>
                        <input asp-for=PostalCode type="text" class="form-control" placeholder="03072" required>
                        <div class="invalid-feedback">
                            Post code required.
                        </div>
                    </div>

                    <button asp-controller="User" asp-action="AddAddress" class="btn btn-primary btn-lg btn-block" type="submit">Add address</button>
                </div>
            </div>
        </form>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017-2018 Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>
</body>