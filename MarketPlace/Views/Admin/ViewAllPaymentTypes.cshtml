@model List<PaymentType>

<h1>All payment types</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model)
        {
            <tr>
                <th scope="row">@type.Id</th>
                <td>@type.Name</td>
                <td>@type.Description</td>
                <td>
                    <div>
                        <form asp-action="DeletePaymentType">
                            <button asp-action="DeletePaymentType" class="btn btn-danger" asp-route-id="@type.Id">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

